{
  "id": null,
  "uid": "cashcard-system",
  "title": "CashCard System Overview",
  "tags": [
    "spring-boot",
    "micrometer"
  ],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-ds"
      },
      "targets": [
        {
          "expr": "system_cpu_usage",
          "legendFormat": "System {{instance}}"
        },
        {
          "expr": "process_cpu_usage",
          "legendFormat": "Process {{instance}}"
        }
      ]
    },
    {
      "title": "JVM Heap Memory",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-ds"
      },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{area=\"heap\"}) by (instance)",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "title": "HTTP Request Rate (Source)",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-ds"
      },
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{uri=\"/pub\"}[1m])",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "title": "Services Health (Up)",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-ds"
      },
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "title": "Kafka Message Flow",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 24,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-ds"
      },
      "targets": [
        {
          "expr": "sum by (instance) (rate(kafka_producer_record_send_total[1m]))",
          "legendFormat": "Produced - {{instance}}"
        },
        {
          "expr": "sum by (instance) (rate(kafka_consumer_records_consumed_total[1m]))",
          "legendFormat": "Consumed - {{instance}}"
        }
      ]
    }
  ]
}